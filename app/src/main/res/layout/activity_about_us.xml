<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_height="match_parent"
android:layout_width="match_parent"
android:background="#fff"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#ff6c2f"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About DD Mall"
            android:id="@+id/heading"
            android:textColor="#fff"
            android:textSize="25sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOPPING MALL"
            android:textColor="#4facfd"
            android:id="@+id/shopping"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/our_story"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OUR STORY OF SUCCESS"
            android:textColor="#444"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#333"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/info"
        android:background="@drawable/text_gradient"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textColor="#6b6b6b"
            android:id="@+id/info_text"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/text_gradient"
            android:id="@+id/grad"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:id="@+id/read"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="#fff"
            android:onClick="reveal_info"
            android:background="@drawable/button_bg"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FUN STATS"
                android:textColor="#4facfd"
                android:id="@+id/fun"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/why"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WHY PEOPLE CHOOSE OUR MALL"
                android:textColor="#444"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#333"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fun, Happiness, Emotions: 80%"
                android:textColor="#444"
                android:padding="0dp"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:id="@+id/bar1"
                    android:layout_margin="5dp"
                    android:background="#fa6426"
                    />


            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food and Drinks for everyone: 98%"
                android:textColor="#444"
                android:padding="0dp"
                android:textSize="16sp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:id="@+id/bar2"
                    android:background="#0ecab6"
                    />


            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping and Discounts: 80%"
                android:textColor="#444"
                android:padding="0dp"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:id="@+id/bar3"
                    android:background="#fa26a3"
                    />


            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entertainment facilities: 100%"
                android:textColor="#444"
                android:padding="0dp"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:id="@+id/bar4"
                    android:layout_margin="5dp"
                    android:background="#92278f"
                    />


            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family weekend: 84%"
                android:textColor="#444"
                android:padding="0dp"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_margin="5dp"
                    android:id="@+id/bar5"
                    android:background="#ede11c"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>





</ScrollView>
